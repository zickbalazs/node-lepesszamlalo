<form action="/stepdatas/newdata" method="post" class="p-3">
    <h3>Password Change</h3>
    <div class="p-3">
        <div class="mb-3">
            <label for="new2" class="form-label">New password again:</label>
            <input type="date" name="date" value="<%= (new Date()).toISOString().split('T')[0] %>" max="<%= (new Date()).toISOString().split('T')[0] %>" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label" for="stepC">Amount of steps:</label>
            <div class="input-group">
                <input class="form-control" type="number" min="0" value="0" name="stepC">
                <label class="input-group-text" for="stepC">steps</label>
            </div>
        </div>
        <input type="submit" class="btn btn-outline-primary" value="Change">
    </div>
</form>